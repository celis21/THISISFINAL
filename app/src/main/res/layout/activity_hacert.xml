<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrescelis.thisis.HACERT">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/bienestar"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rsz_bienestar" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/compras"
                android:layout_below="@+id/bienestar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rsz_compas" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/cultura"
                android:layout_below="@+id/compras"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rsz_cultura" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/gastronomia"
                android:layout_below="@+id/cultura"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rsz_gastronomia" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/naturaleza"
                android:layout_below="@+id/gastronomia"
                android:layout_alignLeft="@+id/gastronomia"
                android:layout_alignStart="@+id/gastronomia"
                android:background="@drawable/rsz_naturaleza" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/negocios"
                android:layout_below="@+id/naturaleza"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rsz_turismode__negocio" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
